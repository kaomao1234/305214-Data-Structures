#:import get_color_from_hex kivy.utils.get_color_from_hex
<Num_customer@MDBoxLayout>:
    orientation:'vertical'
    my_font_name:'SukhumvitSet-Medium'
    black:get_color_from_hex("#000000")
    size_hint_y:None
    height:120
    Label:
        id:show_error_text
        size_hint_y:None
        text:'เพิ่มได้ไม่เกิน 6 คน'
        font_name:root.my_font_name
        markup:True
        height:25
        font_size:18
        halign:'left'
        text_size:self.width,self.height
        color:get_color_from_hex("#FF0000")
    AnchorLayout:
        size_hint_y: None
        height:50
        anchor_x: 'center'
        MDTextField:
            id:num_field
            size_hint_y:None
            size_hint_x:None
            width:100
            halign:"center"
            line_color_normal:root.black
            line_color_focus:root.black
    MDBoxLayout:
        size_hint_y:None
        orientation:'horizontal'
        height:50
        MDFlatButton:
            id:ok_btn
            text:'OK'
        MDFlatButton:
            id:cancel_btn
            text: 'Cancel'
<MenuCard@MDCard>:
    orientation:'horizontal'
    my_font_name:'SukhumvitSet-Medium'
    menu_name:''
    value:''
    black:get_color_from_hex("#000000")
    my_font_name:'SukhumvitSet-Medium'
    padding:[10]
    canvas:
        Color:
            rgba: get_color_from_hex("#000000")
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    Label:
        text:'{} {} bath'.format(root.menu_name,root.value)
        markup:True
        font_size: 18
        color:root.black
        text_size:self.size
        halign:'left'
        valign:'center'
        width:100
        font_name:root.my_font_name
    MDCheckbox:
        id:check_box
        size_hint_x:None
        width:60

<P@MDBoxLayout+IRightBodyTouch>:
    adaptive_width:True
        
<TableCard@TwoLineAvatarIconListItem>:
    text:'Table no.{}'.format(self.num_table)
    secondary_text: "limit 6"
    # markup:True
    # font_name:'SukhumvitSet-Medium'
    black:get_color_from_hex("#000000")
    num_table:''
    IconLeftWidgetWithoutTouch:
        icon:"food-fork-drink"
    P:
        size_hint_x:None
        MDIconButton:
            icon:'minus'
        MDIconButton:
            icon:'plus'