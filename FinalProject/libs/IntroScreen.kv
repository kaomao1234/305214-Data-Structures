#:import get_color_from_hex kivy.utils.get_color_from_hex
<Container@MDBoxLayout>:
    md_bg_color:get_color_from_hex("#000000")
    my_font_name:'SukhumvitSet-Medium'
    black:get_color_from_hex("#000000")
    ScreenManager:
        id:container_manager
        MDScreen:
            name:'intro'
            md_bg_color:get_color_from_hex("#FFFFFF")
            AnchorLayout:
                anchor_y:'center'
                MDBoxLayout:
                    size_hint_y:None
                    height:313
                    orientation: 'vertical'
                    Label:
                        markup:True
                        text:'CafeHeap'
                        font_name:root.my_font_name
                        halign:'center'
                        font_size:48
                        size_hint_y:None
                        color:root.black
                    Label:
                        size_hint_y:None
                        height:29
                        markup:True
                        text:'กรุณาระบุจำนวนโต๊ะ'
                        font_name:root.my_font_name
                        halign:'center'
                        font_size:20
                        color:root.black
                    AnchorLayout:
                        anchor_x: 'center'
                        size_hint_y:None
                        height:39
                        MDTextField:
                            size_hint_y:None
                            size_hint_x:None
                            line_color_normal:root.black
                            line_color_focus:root.black
                            width:135
                            halign:"center"
                    AnchorLayout:
                        anchor_x:'center'
                        MDRoundFlatButton:
                            text: "ตกลง"
                            font_name:root.my_font_name
                            text_color:root.black
                            line_color:root.black
                            on_press:root.next_sc()
                            font_size:20
                            -width:160
                            -height:30