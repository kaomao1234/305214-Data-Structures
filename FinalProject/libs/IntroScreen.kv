#:import get_color_from_hex kivy.utils.get_color_from_hex
<MenuCard@MDCard>:
    orientation:'horizontal'
    my_font_name:'SukhumvitSet-Medium'
    menu_name:''
    value:''
    black:get_color_from_hex("#000000")
    my_font_name:'SukhumvitSet-Medium'
    canvas:
        Color:
            rgba: get_color_from_hex("#000000")
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    Label:
        text:'{}    {}bath'.format(root.menu_name,root.value)
        markup:True
        font_size: 20
        color:root.black
        text_size:self.size
        halign:'center'
        valign:'center'
        font_name:root.my_font_name
    MDCheckbox:
        id:check_box
        size_hint:None,None
        size:dp(60),dp(60)
<TableCard@MDCard+ButtonBehavior>:
    orientation: "vertical"
    focus_behavior: True
    ripple_behavior: True
    my_font_name:'SukhumvitSet-Medium'
    black:get_color_from_hex("#000000")
    num_table:''
    on_press:root.on_focus()
    canvas:
        Color:
            rgba: get_color_from_hex("#000000")
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
    MDBoxLayout:
        orientation:'horizontal'
        MDIcon:
            halign: "center"
            icon: "food-fork-drink"
            size_hint_x:None
        Label:
            markup:True
            font_size: 20
            font_name:root.my_font_name
            color:root.black
            halign:'left'
            text:'โต๊ะ {}'.format(root.num_table)
            text_size:self.size
            valign:'center'
    MDSeparator:
        height: "2dp"
        md_bg_color:root.black
    MDBoxLayout:
        orientation: 'horizontal'
        Label:
            markup:True
            font_name:root.my_font_name
            color:root.black
            text:'จำนวนคน'
            halign:'left'
            font_size: 20
        Label:
            markup:True
            font_name:root.my_font_name
            color:root.black
            text:'0/6'
            halign:'center'
            font_size: 20
            text_size:self.size
            valign:'center'
<Container@MDBoxLayout>:
    md_bg_color:get_color_from_hex("#000000")
    my_font_name:'SukhumvitSet-Medium'
    black:get_color_from_hex("#000000")
    white:get_color_from_hex("#FFFFFF")
    ScreenManager:
        id:container_manager
        MDScreen:
            name:'intro'
            md_bg_color:get_color_from_hex("#FFFFFF")
            AnchorLayout:
                anchor_y:'center'
                MDBoxLayout:
                    size_hint_y:None
                    height:313
                    orientation: 'vertical'
                    Label:
                        markup:True
                        text:'CafeHeap'
                        font_name:root.my_font_name
                        halign:'center'
                        font_size:48
                        size_hint_y:None
                        color:root.black
                    Label:
                        size_hint_y:None
                        height:29
                        markup:True
                        text:'กรุณาระบุจำนวนโต๊ะ'
                        font_name:root.my_font_name
                        halign:'center'
                        font_size:20
                        color:root.black
                    AnchorLayout:
                        anchor_x: 'center'
                        size_hint_y:None
                        height:39
                        MDTextField:
                            id:text_num_table
                            size_hint_y:None
                            size_hint_x:None
                            line_color_normal:root.black
                            line_color_focus:root.black
                            width:135
                            halign:"center"
                    AnchorLayout:
                        anchor_x:'center'
                        MDRoundFlatButton:
                            text: "ตกลง"
                            font_name:root.my_font_name
                            text_color:root.black
                            line_color:root.black
                            on_press:root.next_sc()
                            font_size:20
                            -width:160
                            -height:30