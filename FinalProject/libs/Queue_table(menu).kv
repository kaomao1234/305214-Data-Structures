#:import get_color_from_hex kivy.utils.get_color_from_hex
<MenuScreen@MDScreen>:
    black:get_color_from_hex("#000000")
    md_bg_color:get_color_from_hex("#FFFFFF")
    white:get_color_from_hex("#FFFFFF")
    my_font_name:'SukhumvitSet-Medium'
    MDBoxLayout:
        orientation:'vertical'
        MDToolbar:
            elevation: 10
            title:"Menu"
            md_bg_color:root.white
            specific_text_color:root.black
            left_action_items: [["arrow-left-thick", lambda x : root.switch_sc()]]
        MDSeparator:
            height: "2dp"
            md_bg_color:root.black
        MDBoxLayout:
            orientation: 'vertical'
            padding:[15,15]
            ScrollView:
                MDGridLayout:
                    id:menu_view
                    size_hint_y:None
                    height:self.minimum_height
                    row_default_height: 60
                    cols:1
                    spacing:10
                    padding: [0,2]
        MDSeparator:
            height: "2dp"
            md_bg_color:root.black
        MDBoxLayout:
            orientation:'horizontal'
            size_hint_y:None
            height:50
            Label:
                markup:True
                text:'ราคาทั้งหมด'
                font_name:root.my_font_name
                halign:'center'
                font_size:20
                color:root.black
            Label:
                id:value_show
                text:''
                markup:True
                font_name:root.my_font_name
                halign:'center'
                font_size:20
                color:root.black
            Label:
                text:'บาท'
                markup:True
                font_name:root.my_font_name
                halign:'center'
                font_size:20
                color:root.black
        MDSeparator:
            height: "2dp"
            md_bg_color:root.black
        AnchorLayout:
            anchor_x: 'center'
            padding:[0,15]
            size_hint_y:None
            height:55
            MDRoundFlatButton:
                text: "ตกลง"
                font_name:root.my_font_name
                text_color:root.black
                line_color:root.black
                font_size:20
                -width:190
                -height:40